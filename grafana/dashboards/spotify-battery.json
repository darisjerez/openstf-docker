{
  "uid": "spotify-battery",
  "title": "Spotify & Battery",
  "tags": ["spotify", "battery", "healer"],
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Battery Levels",
      "type": "gauge",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "dfcz47nsq0gzkd" },
      "targets": [
        {
          "expr": "spotify_healer_battery_level",
          "legendFormat": "{{ model }} ({{ serial }})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 100,
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 15 },
              { "color": "green", "value": 30 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 2,
      "title": "Battery Over Time",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "dfcz47nsq0gzkd" },
      "targets": [
        {
          "expr": "spotify_healer_battery_level",
          "legendFormat": "{{ model }} ({{ serial }})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 100,
          "unit": "percent",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 15 },
              { "color": "green", "value": 30 }
            ]
          },
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull", "min"] }
      }
    },
    {
      "id": 3,
      "title": "Heal Event Timeline",
      "type": "timeseries",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 10 },
      "datasource": { "type": "prometheus", "uid": "dfcz47nsq0gzkd" },
      "targets": [
        {
          "expr": "increase(spotify_healer_heals_total[5m])",
          "legendFormat": "{{ model }} ({{ serial }}) â€” {{ action }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80,
            "stacking": { "mode": "normal", "group": "A" },
            "barAlignment": 0,
            "pointSize": 5,
            "showPoints": "never"
          },
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["sum"] }
      }
    },
    {
      "id": 4,
      "title": "Playback Status",
      "type": "table",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 10 },
      "datasource": { "type": "prometheus", "uid": "dfcz47nsq0gzkd" },
      "targets": [
        {
          "expr": "spotify_healer_watching",
          "legendFormat": "",
          "refId": "A",
          "instant": true,
          "format": "table"
        },
        {
          "expr": "spotify_healer_playing",
          "legendFormat": "",
          "refId": "B",
          "instant": true,
          "format": "table"
        },
        {
          "expr": "spotify_healer_battery_level",
          "legendFormat": "",
          "refId": "C",
          "instant": true,
          "format": "table"
        },
        {
          "expr": "spotify_healer_heal_total",
          "legendFormat": "",
          "refId": "D",
          "instant": true,
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "joinByField",
          "options": {
            "byField": "serial",
            "mode": "outer"
          }
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time 1": true,
              "Time 2": true,
              "Time 3": true,
              "Time 4": true,
              "Time": true,
              "__name__": true,
              "__name__ 1": true,
              "__name__ 2": true,
              "__name__ 3": true,
              "__name__ 4": true,
              "instance": true,
              "instance 1": true,
              "instance 2": true,
              "instance 3": true,
              "instance 4": true,
              "job": true,
              "job 1": true,
              "job 2": true,
              "job 3": true,
              "job 4": true,
              "model 1": true,
              "model 2": true,
              "model 3": true,
              "model 4": true
            },
            "renameByName": {
              "serial": "Device",
              "model": "Model",
              "Value #A": "Watching",
              "Value #B": "Playing",
              "Value #C": "Battery %",
              "Value #D": "Heals"
            },
            "indexByName": {
              "serial": 0,
              "model": 1,
              "Value #A": 2,
              "Value #B": 3,
              "Value #C": 4,
              "Value #D": 5
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Watching" },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "1": { "text": "Yes", "color": "green" }, "0": { "text": "No", "color": "red" } } }
                ]
              },
              { "id": "custom.cellOptions", "value": { "type": "color-text" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Playing" },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "1": { "text": "Yes", "color": "green" }, "0": { "text": "No", "color": "red" } } }
                ]
              },
              { "id": "custom.cellOptions", "value": { "type": "color-text" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Battery %" },
            "properties": [
              { "id": "unit", "value": "percent" },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "red", "value": null },
                    { "color": "yellow", "value": 15 },
                    { "color": "green", "value": 30 }
                  ]
                }
              },
              { "id": "custom.cellOptions", "value": { "type": "color-text" } }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [{ "displayName": "Device", "desc": false }],
        "footer": { "show": false }
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
